# Bot Operation Mode (AUTO, APPROVAL, MANUAL)
BOT_MODE=AUTO

# Safety Configuration
SAFETY_STARTUP_DELAY=240000
SAFETY_DAILY_LIMIT=10
SAFETY_HOURLY_LIMIT=3
SAFETY_SIMILARITY_THRESHOLD=0.8
SAFETY_KILL_SWITCH_ENABLED=true

# Security Configuration
API_SECRET_KEY=your-secure-api-key-here
JWT_SECRET=your-jwt-secret-key-here
DATABASE_ENCRYPTION_KEY=your-32-char-encryption-key

# Shop Information
