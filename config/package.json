{
  "name": "whatsapp-sheet-bot",
  "version": "2.0.0",
  "description": "Self-hosted WhatsApp notification bot that polls Google Sheets for orders and sends messages via Baileys",
  "main": "worker.js",
  "scripts": {
    "start": "node worker.js",
    "dev": "node worker.js",
    "worker": "node worker.js",
    "legacy": "node main-bot.js",
    "tailor": "node tailor-bot.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop whatsapp-sheet-bot",
    "pm2:restart": "pm2 restart whatsapp-sheet-bot",
    "pm2:logs": "pm2 logs whatsapp-sheet-bot",
    "pm2:status": "pm2 status",
    "setup": "npm install && echo Setup complete!",
    "deploy": "npm run pm2:start && pm2 save && pm2 startup",
    "monitor": "pm2 monit"
  },
  "dependencies": {
    "@whiskeysockets/baileys": "^6.6.0",
    "axios": "^1.12.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "file-type": "^17.1.6",
    "fluent-ffmpeg": "^2.1.3",
    "googleapis": "^128.0.0",
    "node-cron": "^3.0.3",
    "node-webpmux": "^3.2.1",
    "nodemailer": "^6.9.7",
    "p-queue": "^7.4.1",
    "pino": "^8.16.2",
    "qrcode": "^1.5.3",
    "sqlite3": "^5.1.7",
    "uuid": "^13.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "whatsapp",
    "bot",
    "google-sheets",
    "baileys",
    "notification",
    "orders",
    "automation"
  ],
  "author": "WhatsApp Sheet Bot Developer",
  "license": "MIT"
}
